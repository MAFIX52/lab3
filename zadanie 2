#include <iostream>
using namespace std;
int main()
{
	setlocale(0, "");
    int n1;
    cout << "перевод старинных русских мер длины, торгового и аптекарского веса\n";

	cout << "[1]саженей в метры" << endl;
	cout << "[2]нз дюймов в сантиметры" << endl;
	cout << "[3]футов в метры" << endl;
	cout << "[4]драхм в граммы" << endl;
	cout << "[5]унщий в граммы" << endl;
	cout << "[6]фунтов в килограммы" << endl;
	cout << "[7]аршинов в метры" << endl;
	cout << "[8]золотников в граммы" << endl;
	cout << "[9]дюймое в миллиметры" << endl;
	cout << "Выберите что надо: " << endl;
	cin >> n1;

	int n2 = 0;

	switch (n1)
	{
	case 1:
		cout << "введите значение в (саженях): ";
			cin >> n2;
			cout << "в метрах будет = " << n2 * 2.1366;
		break;
	case 2:
		cout << "введите значение в (нз дюймов): ";
		cin >> n2;
		cout << "в сантиметрах будет = " << n2 * 2.5;
		break;
	case 3:
		cout << "введите значение в (футов): ";
		cin >> n2;
		cout << "в метрах будет = " << n2 * 0.3048;
		break;
	case 4:
		cout << "введите значение в (драхм): ";
		cin >> n2;
		cout << "в граммах будет = " << n2 * 3.7325;
		break;
	case 5:
		cout << "введите значение в (унщий): ";
		cin >> n2;
		cout << "в граммах будет = " << n2 * 29.86;
		break;
	case 6:
		cout << "введите значение в (фунтов): ";
		cin >> n2;
		cout << "в килограммах будет = " << n2 * 0.40951;
		break;
	case 7:
		cout << "введите значение в (аршинов): ";
		cin >> n2;
		cout << "в метрах будет = " << n2 * 0.7112;
		break;
	case 8:
		cout << "введите значение в (золотников): ";
		cin >> n2;
		cout << "в граммах будет = " << n2 * 4.2657;
		break;
	case 9:
		cout << "введите значение в (дюймое): ";
		cin >> n2;
		cout << "в милиметрах будет = " << n2 * 25.3995;
		break;
	}

	return 0;
}
